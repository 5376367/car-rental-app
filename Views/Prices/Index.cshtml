@model IEnumerable<theking.Models.Price>

@{
    ViewBag.Title = "Index";
}

<h2>Prices for classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeKMs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HighSeasonDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LowSeasonDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HighSeasonKM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LowSeasonKM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Example)
        </th>
        <th>
           Example Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeKMs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HighSeasonDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LowSeasonDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HighSeasonKM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LowSeasonKM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Example)
        </td>
        <td>
            <img src="@item.ImageSource" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
