@model theking.Models.Car

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Car</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.Class)
    @Html.HiddenFor(model => model.CarType)
    @Html.HiddenFor(model => model.Make)
    @Html.HiddenFor(model => model.Model)
    @Html.HiddenFor(model => model.Color)
    @Html.HiddenFor(model => model.Doors)
    @Html.HiddenFor(model => model.KMs)
    @Html.HiddenFor(model => model.LicensePlate)
    @Html.HiddenFor(model => model.DateOnRoad)
    @Html.HiddenFor(model => model.StatusRented)



    <div class="form-group">
        <text>Next Service Date</text>
        <input type="date" name="NextServiceDate" min=@DateTime.Now.ToString("yyyy-MM-dd") value=@DateTime.Today.ToString("yyyy-MM-dd")>
    </div>

    <div class="form-group">
        <text>Next Service KMs</text>
        
            <input type="number" name="NextServiceKMS" value=" @Html.DisplayFor(model => model.KMs)"
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
