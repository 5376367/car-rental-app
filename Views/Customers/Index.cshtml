@model IEnumerable<theking.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

    <h3>
        @Html.ActionLink("+Add New Customer", "Create")


    </h3>
<h2>Customers</h2>


<table class="table">
    <tr>
        <th>
            @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.FirstSortParm })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastSortParm })
        </th>
        <th>
            @Html.ActionLink("DOB", "Index", new { sortOrder = ViewBag.DOBSortParm })
        </th>
        <th>
            @Html.ActionLink("Member Since", "Index", new { sortOrder = ViewBag.MemberSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDnum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>

        @item.DOB.Value.ToShortDateString()

    </td>
    <td>
        @item.MemberSince.Value.ToShortDateString()
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.IDnum)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.ActionLink("See Rentals of customer", "CustomerRentals", "rentals", new { CustID = item.id }, null) |
        @Html.ActionLink("Give Car", "CreateFromCustomer", "rentals", new { CustID = item.id }, null) |
        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
    }

</table>
